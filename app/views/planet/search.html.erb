<!DOCTYPE html> 
<div id="site_list">
	<% if !@sites.empty? %>
		<h1>Sitios encontrados</h1>
		<table>
			<% @sites.each do |site| %>
		    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
		    <td> 
		      <%= link_to image_tag(site.image.url, :class => 'list_image'), site %>
		    </td> 
				<td class="list_description"> 
		      <dl> 
		        <dt><%=link_to(site.name, site) %></dt> 
		        <dd><%= truncate(strip_tags(site.description), :length => 80) %></dd>
		      </dl> 
		    </td>
		    <td class="list_actions"> 
		      <%= link_to 'Show', site %><br/>
		      <%= link_to 'Destroy', site, 
		                  :confirm => 'Are you sure?',
		                  :method => :delete if site.user == current_user  %>

		    </td>
		  	</tr>
			<% end %>
		</table>
	<% end %>
	<% if !@trips.empty? %>
		<h1>Viajes encontrados</h1>
		<table>
			<% @trips.each do |trip| %>
		    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
				<td class="list_description"> 
		      <dl> 
		        <dt><%=link_to(trip.name, trip) %></dt> 
		        <dd><%= truncate(strip_tags(trip.description), :length => 80) %></dd>
		      </dl> 
		    </td>
		    <td class="list_actions"> 
		      <%= link_to 'Show', trip %><br/>
		      <%= link_to 'Destroy', trip, 
		                  :confirm => 'Are you sure?',
		                  :method => :delete if trip.user == current_user  %>

		    </td>
		  	</tr>
			<% end %>
		</table>
	<% end %>
	<%= "No se ha encontrado nada" if (@sites.empty? && @trips.empty?) %>
</div> 
